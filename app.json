{
  "name": "Furina Telegram",
  "description": "Furina Telegram Bot",
  "repository": "https://github.com/DOT-007/Furina-tg",
  "logo": "https://files.catbox.moe/w7s041.png",
  "buildpacks": [
    { "url": "heroku/python" }
  ],
  "env": {
    "API_ID": {
      "description": "Telegram API ID (from my.telegram.org)",
      "required": true
    },
    "API_HASH": {
      "description": "Telegram API HASH (from my.telegram.org)",
      "required": true
    },
    "SESSION": {
      "description": "Telegram bot token (from BotFather)",
      "required": true
    },
    "MODE": {
      "description": "Bot mode (private/public)",
      "value": "private"
    }
  },
  
  "formation": [
    {
      "type": "worker",
      "quantity": 1
    }
  ],
  "scripts": {
    "postdeploy": "echo 'Set SESSION, API_ID and API_HASH in Heroku config vars before starting the bot.'"
  }
}
